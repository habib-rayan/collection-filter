{%- assign sort_by = results.sort_by | default: results.default_sort_by -%}
<div class="sort-by"> 
    <div class="filter-item-heading inactive" onclick="filterActive(event, this)">
        <span>Sort by</span>
        <span class="filter-arrow">
            <svg viewBox="0 0 320 512"> 
                <path d="M278.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-160 160c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L210.7 256 73.4 118.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l160 160z"></path>
            </svg>
        </span> 
    </div>

    <div id="filter-item-info" class="filter-item-info" style="display: none;">
        {%- for option in collection.sort_options -%}
            <div class="filter-info-item">
                <label for="filter-{{ option.name | handleize }}" class="filter_item_label {% if option.value == sort_by %} active{% endif %}">
                    <input class="sort-checkbox" type="radio" name="sort"
                        value="{{ option.value | escape }}" onclick="sortCheck(event, this)" 
                        id="filter-{{ option.name | handleize }}"
                    {% if option.value == sort_by %}checked{% endif %}>
                    <span class="facet-checkbox-text" aria-hidden="true"> {{ option.name | escape }}</span>
                </label>
            </div>
        {%- endfor -%}
    </div>
</div>
